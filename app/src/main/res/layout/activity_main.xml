<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activity.MainActivity">

  <Button
    android:id="@+id/toEaseActivity"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="50dp"
    android:text="封装之前使用MVP"
    android:textSize="18sp"
    android:textColor="#000"
    android:textAllCaps="false"
    ></Button>

  <Button
    android:id="@+id/toActivity"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    app:layout_constraintTop_toBottomOf="@+id/toEaseActivity"
    android:layout_marginTop="50dp"
    android:text="封装MVP后Activity使用"
    android:textSize="18sp"
    android:textColor="#000"
    android:textAllCaps="false"
    ></Button>

  <Button
    android:id="@+id/toFragment"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="50dp"
    app:layout_constraintTop_toBottomOf="@+id/toActivity"
    android:text="封装MVP后Fragment使用"
    android:textSize="18sp"
    android:textColor="#000"
    android:textAllCaps="false"
    ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>